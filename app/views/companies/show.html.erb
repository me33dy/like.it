
<div class="row">
    <!-- <div class="large-12 columns"> -->
     
      <div class="row">
 
   
 
        <aside class="small-3 columns">
          <h3>Welcome <%= @company.name %></h3>
          <div>
            <%= link_to "Account setting", edit_company_path, :class => "button expand"%>
            <%= link_to "Add a product", new_product_path, :class => "button expand"%>
            <%= link_to "Sign Out", sessions_path, method: :delete, :class => "button expand"%>

          </div>

 
        </aside>
 
     
 
 
     
 
          <article class="small-9 columns">
            
   
            <div class="row">
              <% @company.products.each do |p| %>
                <div class="large-4 small-6 columns">
                  <div id = "jibox" class="panel">
                    <p><%= link_to p.name, p %></p>
                    <div class="th">  
                      <%= image_tag p.image.url(:medium)%>
                    </div>

                    <div><span><%= link_to 'Edit', edit_product_path(p) %> | 
                    <%= link_to 'Delete', product_path(p), method: :delete, data: { confirm: "Delete #{p.name} ?" } %><span>
                    </div>

                      <h6 class="subheader">Description</h6>
                      <%= p.description %>
                    <div>

                    </div>

                    <div>
                    Reward: <%= p.reward %><br>
                    Requirement: <%= p.requirement %> likes
                    </div>

                    <div>promoted by <%= link_to p.product_promotions.count, p %> people</div>
                  </div>
                </div>
               <% end %>             
            </div>
          </div>
        </article>
 
 
 
     
 
